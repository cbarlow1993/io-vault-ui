{
  "name": "io-vault-multi-chain-be-v2",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "test": "vitest run",
    "test:unit": "vitest run --dir tests/unit -c tests/unit/vitest.config.ts",
    "test:integration": "vitest run --dir tests/integration -c tests/integration/vitest.config.ts",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "typecheck": "tsc --noEmit",
    "migrate:up": "tsx scripts/migrate.ts up",
    "migrate:down": "tsx scripts/migrate.ts down",
    "migrate:status": "tsx scripts/migrate.ts status",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@blockaid/client": "^0.65.0",
    "@bsv/sdk": "^1.5.1",
    "@coingecko/coingecko-typescript": "^2.5.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@iofinnet/bitcoinjs-lib": "^1.0.0",
    "@iofinnet/errors-sdk": "^13.25.1",
    "@iofinnet/http-sdk": "^13.25.1",
    "@iofinnet/io-core-cldsvc-errors-sdk": "1.12.0",
    "@iofinnet/io-core-cldsvc-sdk": "^13.25.1",
    "@iofinnet/io-core-dapp-utils-chains-sdk": "^13.3.0",
    "@iofinnet/io-vault-cldsvc-sdk": "3.5.1",
    "@iofinnet/io-vault-db-sdk": "^8.6.0",
    "@noves/noves-sdk": "^1.4.0",
    "@polkadot/api": "^15.10.2",
    "@scure/base": "^1.2.1",
    "@solana/web3.js": "^1.98.4",
    "bn.js": "^5.2.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "eip55": "^2.1.1",
    "ethers": "^6.14.4",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "6.1.0",
    "jose": "^6.1.3",
    "kysely": "^0.28.9",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "viem": "^2.43.5",
    "xstate": "^5.25.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@biomejs/biome": "^2.3.11",
    "@faker-js/faker": "^10.2.0",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "dotenv": "^16.5.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
